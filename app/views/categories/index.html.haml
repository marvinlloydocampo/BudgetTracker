.div.container
  %h1 List of Categories

  %table.table.table-dark
    %thead
      %tr
        %th Name
        %th
        %th

    %tbody
      - @categories.each do |category|
        %tr
          %td= category.name
          %td= link_to 'Show', category, class: 'btn btn-primary'
          %td= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'

  %br

  = link_to 'New Category', new_category_path, class: 'btn btn-primary'

