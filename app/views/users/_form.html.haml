.div.container
  = form_for @user do |f|
    - if @user.errors.any?
      #error_explanation
        %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
        %ul
          - @user.errors.full_messages.each do |message|
            %li= message

    .form-group
      = f.label :name
      = f.text_field :name

    = f.submit 'Save', class: 'btn btn-primary'
    = link_to 'Back', users_path, class: 'btn btn-primary'
